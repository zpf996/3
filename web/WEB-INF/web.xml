<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd
         http://java.sun.com/xml/ns/j2ee"
         version="4.0">
        <filter>
            <filter-name>EncodingFilter</filter-name>
            <filter-class>filter.EncodingFilter</filter-class>
        </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.login.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_admin</servlet-name>
        <servlet-class>servlet.login.login_admin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_Doctor</servlet-name>
        <servlet-class>servlet.login.login_Doctor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login_patient</servlet-name>
        <servlet-class>servlet.login.login_patient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Doctor_update</servlet-name>
        <servlet-class>servlet.update.Doctor_update</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Doctor_list</servlet-name>
        <servlet-class>servlet.list.Doctor_list</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reg_Doctor</servlet-name>
        <servlet-class>servlet.registered.reg_Doctor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reg_patient</servlet-name>
        <servlet-class>servlet.registered.reg_patient</servlet-class>
    </servlet>
    
    
    
    <servlet-mapping>
        <servlet-name>reg_patient</servlet-name>
        <url-pattern>/reg_patient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reg_Doctor</servlet-name>
        <url-pattern>/reg_Doctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Doctor_list</servlet-name>
        <url-pattern>/Doctor_list</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Doctor_update</servlet-name>
        <url-pattern>/Doctor_update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_patient</servlet-name>
        <url-pattern>/login_patient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_Doctor</servlet-name>
        <url-pattern>/login_Doctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login_admin</servlet-name>
        <url-pattern>/login_admin</url-pattern>
    </servlet-mapping>
</web-app>